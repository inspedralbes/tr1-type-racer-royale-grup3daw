# URL del cliente frontend para la configuración de CORS
FRONTEND_URL=

# Variables de base de datos (si se usan en el futuro)
MONGO_URI=
DB_HOST_PROD=
DB_USER_PROD=
DB_PASSWORD_PROD=
DB_NAME_PROD=
